page {
  overflow: scroll;
  position: fixed;
  margin: 0px;
  background-size: 100% 100%;
}

.wrap {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  height: auto;
  overflow-y: auto;
}

.btns {
  height: 160rpx;
  width: 650rpx;
  position: fixed;
  bottom: 40px;
  left: 50%;
  margin-left: -325rpx;
}

.btn {
  height: 100rpx;
  text-align: center;
  background: #8a8a8a;
  color: #1f1f1f;
  border-radius: 15px;
  float: center;
  opacity: 0.9;
}

.input {
  text-align: center;
  margin: 20rpx;
}

.btn::after {
  border: 0;
}

.btn_on {
  background-color: #6e7172;
  color: rgb(173, 173, 173);
}

.modal-content {
  margin: 40rpx;
  border-radius: 45rpx;
  background: rgba(0, 0, 0, 0.75);
  color: #fff;
  padding: 40px;
}

.knowBtn {
  height: 440rpx;
  width: 500rpx;
  text-align: center;
  background: #8a8a8a;
  line-height: 390rpx;
  border-radius: 900px;
  margin: 15px;
  color: #fff;
}

.knowBtn::after {
  border: 0;
}

.knowBtn_on {
  background-color: fff;
  color: #000;
}